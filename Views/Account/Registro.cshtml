@{
    ViewData["Title"] = "Registro";
}


<div class="registro-container">


    <h2 class="registro-titulo">
        ¡Estás a un paso de unirte a <strong>OldMates</strong>!
    </h2>

    <form action="RegistroPost" method="post" class="registro-form">


        <div class="form-group">
            <label>Usuario</label>
            <input type="text" class="form-control" name="Username" required autocomplete="off"/>
        </div>


        <div class="form-group">
            <label>Nombre</label>
            <input type="text" class="form-control" name="Nombre" required autocomplete="off"/>
        </div>


        <div class="form-group">
            <label>Apellido</label>
            <input type="text" class="form-control" name="Apellido" required autocomplete="off"/>
        </div>


        <div class="form-group">
            <label>Localidad</label>
            <input type="text" class="form-control" name="Localidad" required autocomplete="off"/>
        </div>


        <div class="form-group">
            <label>Intereses</label>
            <input type="text" class="form-control" name="Intereses" required autocomplete="off"/>
        </div>


<div class="form-group">
    <label>Contraseña</label>
    <input type="password" class="form-control" id="contraseña" name="Contraseña" required autocomplete="off"/>
</div>

<div class="form-group">
    <label>Repetir Contraseña</label>
    <input type="password" class="form-control" id="repetir" name="RepetirContraseña" required autocomplete="off"/>
    <small id="msg" class="text-danger"></small>
</div>


<script>
    const pass = document.getElementById("contraseña");
    const rep = document.getElementById("repetir");
    const msg = document.getElementById("msg");

    rep.addEventListener("input", () => {
        if (rep.value !== pass.value) {
            msg.textContent = "Contraseñas incorrecta. Ingresé nuevamente";
        } else {
            msg.textContent = "";
        }
    });
</script>

        <button type="submit" class="btn-enviar">Registrarse</button>
    </form>


    <p class="registro-abajo">
        ¿Ya tenés cuenta?
        <a href="Login">Inicia sesión</a>
    </p>


</div>