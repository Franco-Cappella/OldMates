@{
    ViewData["Title"] = "Tutoriales";
}

<div class="carrusel-tutoriales">
    <h2 class="text-center mb-4">Tutoriales</h2>

    <div class="swiper tutorialesSwiper">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <img src="~/img/ManosCreativas.png" alt="Manos creativas">
                <div class="swiper-caption">
                    <h5>Manos creativas</h5>
                    <p>Taller de manualidades donde los participantes crean objetos con papel, lana o pintura, estimulando su creatividad y coordinación.</p>
                </div>
            </div>

            <div class="swiper-slide">
                <img src="~/img/RegistroYUso.png" alt="Registro y uso">
                <div class="swiper-caption">
                    <h5>Registro y uso básico de una plataforma</h5>
                    <p>Cómo crear una cuenta, iniciar sesión, configurar el perfil y navegar por las funciones principales.</p>
                </div>
            </div>

            <div class="swiper-slide">
                <img src="~/img/OrganizacionDelHogar.png" alt="Organización del hogar">
                <div class="swiper-caption">
                    <h5>Organización del hogar</h5>
                    <p>Consejos para mantener el hogar ordenado, limpio y funcional, con buena distribución de tareas y espacios.</p>
                </div>
            </div>
        </div>

        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        try {
            if (typeof Swiper === 'undefined') {
                console.error('Swiper.js no está cargado');
                return;
            }
            
            var swiper = new Swiper(".tutorialesSwiper", {
                loop: true,
                autoplay: {
                    delay: 5000,
                    disableOnInteraction: false,
                },
                pagination: {
                    el: ".swiper-pagination",
                    clickable: true,
                },
                navigation: {
                    nextEl: ".swiper-button-next",
                    prevEl: ".swiper-button-prev",
                },
                effect: 'slide',
                speed: 600,
            });
            
            if (!swiper) {
                console.error('Error al inicializar Swiper de tutoriales');
            }
        } catch (error) {
            console.error('Error en carrusel de tutoriales:', error);
        }
    });
</script>



