@{
    ViewData["Title"] = "Tutoriales";
}

<div class="carrusel-actividades">
    <h2 class="title text-center mb-4">Tutoriales</h2>

    <div class="swiper tutorialesSwiper">
        <div class="swiper-wrapper">
            
            <div class="swiper-slide">
                <div class="card-actividad">
                    <div class="card-actividad-img">
                        <img src="~/img/ManosCreativas.png" alt="Manos creativas">
                    </div>
                    <div class="card-actividad-body">
                        <div>
                            <h5>Manos Creativas</h5>
                            <p>Taller de manualidades donde los participantes crean objetos con papel, lana o pintura, estimulando su creatividad y coordinación.</p>
                            <div class="card-actividad-info">
                                <span><strong>Categoría:</strong> Manualidades</span>
                                <span><strong>Duración:</strong> 1 hora</span>
                                <span><strong>Nivel:</strong> Principiante</span>
                            </div>
                        </div>
                        <div class="card-actividad-actions">
                            <a class="btn btn-primary" href="https://www.youtube.com/results?search_query=manualidades+para+adultos+mayores" target="_blank">Ver Tutorial</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="swiper-slide">
                <div class="card-actividad">
                    <div class="card-actividad-img">
                        <img src="~/img/RegistroYUso.png" alt="Registro y uso">
                    </div>
                    <div class="card-actividad-body">
                        <div>
                            <h5>Registro y Uso de la Plataforma</h5>
                            <p>Aprende cómo crear una cuenta, iniciar sesión, configurar tu perfil y navegar por las funciones principales de la plataforma.</p>
                            <div class="card-actividad-info">
                                <span><strong>Categoría:</strong> Tecnología</span>
                                <span><strong>Duración:</strong> 30 minutos</span>
                                <span><strong>Nivel:</strong> Básico</span>
                            </div>
                        </div>
                        <div class="card-actividad-actions">
                            <a class="btn btn-primary" href="https://www.youtube.com/results?search_query=como+usar+internet+para+principiantes" target="_blank">Ver Tutorial</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="swiper-slide">
                <div class="card-actividad">
                    <div class="card-actividad-img">
                        <img src="~/img/OrganizacionDelHogar.png" alt="Organización del hogar">
                    </div>
                    <div class="card-actividad-body">
                        <div>
                            <h5>Organización del Hogar</h5>
                            <p>Consejos prácticos para mantener tu hogar ordenado, limpio y funcional, con buena distribución de tareas y espacios.</p>
                            <div class="card-actividad-info">
                                <span><strong>Categoría:</strong> Hogar</span>
                                <span><strong>Duración:</strong> 45 minutos</span>
                                <span><strong>Nivel:</strong> Intermedio</span>
                            </div>
                        </div>
                        <div class="card-actividad-actions">
                            <a class="btn btn-primary" href="https://www.youtube.com/results?search_query=organizar+el+hogar+consejos" target="_blank">Ver Tutorial</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="swiper-slide">
                <div class="card-actividad">
                    <div class="card-actividad-img">
                        <img src="~/img/ManosCreativas.png" alt="Cocina saludable">
                    </div>
                    <div class="card-actividad-body">
                        <div>
                            <h5>Cocina Saludable</h5>
                            <p>Aprende a preparar recetas nutritivas y deliciosas, perfectas para mantener una alimentación balanceada y saludable.</p>
                            <div class="card-actividad-info">
                                <span><strong>Categoría:</strong> Cocina</span>
                                <span><strong>Duración:</strong> 1 hora</span>
                                <span><strong>Nivel:</strong> Principiante</span>
                            </div>
                        </div>
                        <div class="card-actividad-actions">
                            <a class="btn btn-primary" href="https://www.youtube.com/results?search_query=recetas+saludables+faciles" target="_blank">Ver Tutorial</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="swiper-slide">
                <div class="card-actividad">
                    <div class="card-actividad-img">
                        <img src="~/img/RegistroYUso.png" alt="Ejercicios en casa">
                    </div>
                    <div class="card-actividad-body">
                        <div>
                            <h5>Ejercicios en Casa</h5>
                            <p>Rutina de ejercicios sencillos que puedes hacer en casa para mantenerte activo y mejorar tu salud física.</p>
                            <div class="card-actividad-info">
                                <span><strong>Categoría:</strong> Salud</span>
                                <span><strong>Duración:</strong> 30 minutos</span>
                                <span><strong>Nivel:</strong> Todos</span>
                            </div>
                        </div>
                        <div class="card-actividad-actions">
                            <a class="btn btn-primary" href="https://www.youtube.com/results?search_query=ejercicios+en+casa+adultos+mayores" target="_blank">Ver Tutorial</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        try {
            if (typeof Swiper === 'undefined') {
                console.error('Swiper.js no está cargado');
                return;
            }
            
            var swiper = new Swiper(".tutorialesSwiper", {
                slidesPerView: 1,
                spaceBetween: 30,
                loop: true,
                autoplay: {
                    delay: 5000,
                    disableOnInteraction: false,
                },
                navigation: {
                    nextEl: ".swiper-button-next",
                    prevEl: ".swiper-button-prev",
                },
                pagination: {
                    el: ".swiper-pagination",
                    clickable: true,
                    dynamicBullets: true,
                },
                speed: 600,
            });
            
            if (!swiper) {
                console.error('Error al inicializar Swiper de tutoriales');
            }
        } catch (error) {
            console.error('Error en carrusel de tutoriales:', error);
        }
    });
</script>



