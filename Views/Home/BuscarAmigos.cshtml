@using OldMates.Models
@{
    ViewData["Title"] = "Buscar Amigos";
    List<Usuario> usuarios = ViewBag.Usuarios as List<Usuario> ?? new List<Usuario>();
    string busqueda = ViewBag.Busqueda as string ?? "";
    Usuario usuarioActual = ViewBag.Usuario;
}

<div class="buscar-container">
    <h1 class="buscar-title">Buscar Personas</h1>
    <p class="buscar-subtitle">Encontr치 nuevos amigos con intereses similares</p>

    <form action="@Url.Action("BuscarAmigos", "Home")" method="get" class="buscar-form">
        <div class="buscar-input-group">
            <input type="text" name="busqueda" value="@busqueda" 
                   placeholder="Buscar por nombre o usuario..." 
                   class="buscar-input" />
            <button type="submit" class="buscar-btn">
                <i class="bi bi-search"></i> Buscar
            </button>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(busqueda))
    {
        <div class="resultados-section">
            <h2 class="resultados-title">
                Resultados para "@busqueda" 
                <span class="resultados-count">(@usuarios.Count encontrados)</span>
            </h2>

            @if (usuarios.Count == 0)
            {
                <div class="empty-results">
                    <i class="bi bi-search" style="font-size: 3rem; color: #BDD6E6;"></i>
                    <h3>No se encontraron personas</h3>
                    <p>Prob치 con otro nombre o invit치 a tus amigos por WhatsApp</p>
                    <a href="@Url.Action("InvitarAmigos", "Home")" class="btn btn-invitar">
                        <i class="bi bi-whatsapp"></i> Invitar por WhatsApp
                    </a>
                </div>
            }
            else
            {
                <div class="usuarios-grid">
                    @foreach (var u in usuarios)
                    {
                        string estadoAmistad = u.Intereses;
                        <div class="usuario-card">
                            <img src="@(u.Foto ?? "/img/usuario_default.png")" alt="Foto" class="usuario-foto">
                            <div class="usuario-info">
                                <h4>@u.Nombre @u.Apellido</h4>
                                <p class="usuario-localidad">
                                    <i class="bi bi-geo-alt"></i> @(u.Localidad ?? "Sin ubicaci칩n")
                                </p>
                            </div>
                            <div class="usuario-action">
                                @if (estadoAmistad == "aceptada")
                                {
                                    <span class="estado-amigos">
                                        <i class="bi bi-check-circle-fill"></i> Ya son amigos
                                    </span>
                                }
                                else if (estadoAmistad == "pendiente")
                                {
                                    <span class="estado-pendiente">
                                        <i class="bi bi-clock"></i> Solicitud enviada
                                    </span>
                                }
                                else
                                {
                                    <form action="@Url.Action("EnviarSolicitudAmistad", "Home")" method="post">
                                        <input type="hidden" name="IDAmigo" value="@u.ID" />
                                        <button type="submit" class="btn-agregar">
                                            <i class="bi bi-person-plus"></i> Agregar
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }

    <div class="volver-section">
        <a href="@Url.Action("ListaDeAmigos", "Home")" class="btn btn-volver">
            <i class="bi bi-arrow-left"></i> Volver a Mis Amigos
        </a>
    </div>
</div>

