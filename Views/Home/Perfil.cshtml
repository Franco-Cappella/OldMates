@using OldMates.Models
@{
    Usuario usuario = ViewBag.Usuario;
    ViewData["Title"] = "Perfil";
}

<div class="perfil-view-container">
    <h2 class="perfil-view-title">Mi Perfil</h2>

    @if (usuario != null)
    {
        <div class="perfil-view-card">
            
            <!-- Header con foto y nombre -->
            <div class="perfil-view-header">
                <div class="perfil-view-foto-wrapper">
                    <img src="@(usuario.Foto ?? "/img/usuario_default.png")" alt="Foto de perfil" class="perfil-view-foto">
                </div>
                <div class="perfil-view-header-info">
                    <h3 class="perfil-view-nombre">@usuario.Nombre @usuario.Apellido</h3>
                    <p class="perfil-view-username">@usuario.Username</p>
                </div>
            </div>

            <!-- Información personal -->
            <div class="perfil-view-section">
                <h4 class="perfil-view-section-title">Información Personal</h4>
                <div class="perfil-view-info-grid">
                    
                    <div class="perfil-view-info-item">
                        <div>
                            <div class="perfil-view-info-label">Nombre Completo</div>
                            <div class="perfil-view-info-value">@usuario.Nombre @usuario.Apellido</div>
                        </div>
                    </div>

                    <div class="perfil-view-info-item">
                        <div>
                            <div class="perfil-view-info-label">Ubicación</div>
                            <div class="perfil-view-info-value">@usuario.Localidad</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Intereses -->
            @if (!string.IsNullOrWhiteSpace(usuario.Intereses))
            {
                <div class="perfil-view-section">
                    <h4 class="perfil-view-section-title">Mis Intereses</h4>
                    <div class="perfil-view-intereses">
                        @foreach (var interes in usuario.Intereses.Split(','))
                        {
                            <span class="perfil-view-interes-tag">@interes.Trim()</span>
                        }
                    </div>
                </div>
            }

            <!-- Botones de acción -->
            <div class="perfil-view-actions">
                <a href="@Url.Action("EditarPerfil", "Home")" class="perfil-view-btn perfil-view-btn-primary">
                    Editar Perfil
                </a>
                <a href="@Url.Action("MisActividades", "Home")" class="perfil-view-btn perfil-view-btn-secondary">
                    Mis Actividades
                </a>
                <a href="@Url.Action("Actividades", "Home")" class="perfil-view-btn perfil-view-btn-info">
                    Explorar Actividades
                </a>
            </div>

        </div>
    }
    else
    {
        <p class="perfil-view-empty">No se encontró información del usuario.</p>
    }
</div>
