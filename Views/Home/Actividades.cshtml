@using OldMates.Models
@{
    List<Evento> Eventos = ViewBag.Eventos;

    int? IDUsuario = ViewBag.IDUsuario != null ? (int)ViewBag.IDUsuario : null;

    List<int> EventosInscripto = ViewBag.EventosInscripto != null
        ? (List<int>)ViewBag.EventosInscripto
        : new List<int>();
}

<div class="container mt-4">

    <!-- ========================== -->
    <!--   BOTÓN CREAR ACTIVIDAD    -->
    <!-- ========================== -->

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Actividades</h2>

        <a class="btn btn-primary" href="@Url.Action("CrearEvento", "Home")">
            Crear nueva actividad
        </a>
    </div>




    <!-- ========================== -->
    <!--       LISTA ACTIVIDADES    -->
    <!-- ========================== -->

    @if (Eventos != null && Eventos.Count > 0)
    {
        <div class="swiper actividadesSwiper">
            <div class="swiper-wrapper">
                @foreach (var evento in Eventos)
                {
                    bool estaInscripto = EventosInscripto.Contains(evento.ID);

                    <div class="swiper-slide">
                        <img src="~/img/@evento.Foto" alt="@evento.Titulo">
                        <div class="swiper-caption">
                            <h5>@evento.Titulo</h5>
                            <p>@evento.Descripcion</p>
                            <p><small><strong>Fecha:</strong> @evento.Fecha.ToString("dd/MM/yyyy") | <strong>Localidad:</strong> @evento.Localidad</small></p>
                            <div class="mt-3">
                                @if (evento.IDCreador == IDUsuario)
                                {
                                    <a class="btn btn-warning btn-sm" href="@Url.Action("ModificarEvento", "Home", new { IDEvento = evento.ID })">Editar</a>
                                    <a class="btn btn-danger btn-sm" href="@Url.Action("BorrarEvento", "Home", new { IDEvento = evento.ID })">Eliminar</a>
                                }
                                else
                                {
                                    <a class="btn btn-secondary btn-sm" href="@Url.Action("DesInscribirse", "Home", new { IDEvento = evento.ID })">
                                        @(estaInscripto ? "Desinscribirse" : "Inscribirse")
                                    </a>
                                }
                                <a class="btn btn-info btn-sm" href="@Url.Action("ActividadUnica", "Home", new { IDEvento = evento.ID })">Ver más</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-pagination"></div>
        </div>

        <script>
            var swiperActividades = new Swiper(".actividadesSwiper", {
                loop: true,
                autoplay: {
                    delay: 5000,
                    disableOnInteraction: false,
                },
                pagination: {
                    el: ".swiper-pagination",
                    clickable: true,
                },
                navigation: {
                    nextEl: ".swiper-button-next",
                    prevEl: ".swiper-button-prev",
                },
            });
        </script>
    }
    else
    {
        <p>No hay actividades disponibles.</p>
    }

</div>
