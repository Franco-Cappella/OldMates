@using OldMates.Models
@{
    List<Evento> Eventos = ViewBag.Eventos;

    // IDUsuario sin 'as'
    int? IDUsuario;
    if (ViewBag.IDUsuario != null)
    {
        IDUsuario = (int)ViewBag.IDUsuario;
    }
    else
    {
        IDUsuario = null;
    }

    // EventosInscripto sin 'as'
    List<int> EventosInscripto;
    if (ViewBag.EventosInscripto != null)
    {
        EventosInscripto = (List<int>)ViewBag.EventosInscripto;
    }
    else
    {
        EventosInscripto = new List<int>();
    }
}

<div>
    <h2>Actividades</h2>

    @if (Eventos != null && Eventos.Count > 0)
    {
        @foreach (var evento in Eventos)
        {
            bool estaInscripto = EventosInscripto.Contains(evento.ID);

            <div>
                <p><strong>Título:</strong> @evento.Titulo</p>
                <p><strong>Descripción:</strong> @evento.Descripcion</p>
                <p><strong>Fecha:</strong> @evento.Fecha.ToString("dd/MM/yyyy")</p>
                <p><strong>Localidad:</strong> @evento.Localidad</p>

                <div>
                    @if (evento.IDCreador == IDUsuario)
                    {
                        <a href="@Url.Action("ModificarEvento", "Home", new { IDEvento = evento.ID })">Editar</a>
                        <a href="@Url.Action("BorrarEvento", "Home", new { IDEvento = evento.ID })">Eliminar</a>
                    }
                    else
                    {
                        <a href="@Url.Action("DesInscribirse", "Actividades", new { IDEvento = evento.ID })">
                            @(estaInscripto ? "Desinscribirse" : "Inscribirse")
                        </a>
                    }

                    <a href="@Url.Action("ActividadUnica", "Actividades", new { IDEvento = evento.ID })">Ver más</a>
                </div>
            </div>
        }
    }
    else
    {
        <p>No hay actividades disponibles.</p>
    }
</div>
